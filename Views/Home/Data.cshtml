                <th scope="col">Age at Death</th>
                <th scope="col">Hair Color</th>
                <!--Textile structure-->
                <!--Textile color-->
                <!--Textile function-->

            </tr>
        </thead>

        <tbody>
            @foreach (Burialmain b in Model.Records)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.Sex</td>
                    <td>@b.Depth</td>
                    <!--Estimated Stature-->

                    <td>@b.Headdirection</td>
                    <td>@b.Ageatdeath</td>
