
@{
    ViewData["Title"] = "Add Record";
}


@model INTEX.Models.Burialmain

<div class="border p-4">
    <form method="post">
        <label asp-for="Id">Burial ID:</label>
        <input asp-for="Id" class="form-control" />

        <label for="sex">Sex:</label>
        <select name="sex" class="form-control">
            <option value=""> -- Select Sex -- </option>
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
        <br />
        <label for="burialdepth">Burial Depth</label>
        <input type="text" id="burialdepth" name="burialdepth" class="form-control"/>
        <br />
        <label for="stature">Estimate Stature</label>
        <input type="text" id=" stature" name=" stature" class="form-control"/>
        <br />
        <label for="ageatdeath">Age at Death</label>
        <select name="ageatdeath" class="form-control">
            <option value=""> -- Select Age at Death --</option>
            <option value="A">Adult</option>
            <option value="C">Child</option>
            <option value="I">Infant</option>
            <option value="N">Newborn</option>
            <option value="U">Unknown</option>
        </select>
        <br />
        <label for="headdirection">Head Direction</label>
        <select name="headdirection" class="form-control">
            <option value=""> -- Select Head Direction -- </option>
            <option value="W">West</option>
            <option value="E">East</option>
            <option value="I"> Indeterminate</option>
        </select>
        <br />
        <label for="squarenorthsouth">SquareNorthSouth</label>
        <input type="text" id="squarenorthsouth" name="squarenorthsouth" class="form-control"/>
        <br />
        <label for="northsouth">NorthSouth</label>
        <select name="northsouth" class="form-control">
            <option value=""> -- Select a Direction</option>
            <option value="N"> North</option>
            <option value="S">South</option>
        </select>
        <br />
        <label for="squareeastwest">SquareEastWest</label>
        <input type="text" id="squareeastwest" name="squareeastwest" class="form-control"/>
        <br />
        <label for="eastwest">EastWest</label>
        <select name="eastwest" class="form-control">
            <option value=""> -- Select a Direction -- </option>
            <option value="E">East</option>
            <option value="W">West</option>
        </select>
        <br />
        <label name="area">Area</label>
        <select name="area" class="form-control">
            <option value=""> -- Select an Area -- </option>
            <option value="SW">South West</option>
            <option value="SE">South East</option>
            <option value="NW">North West</option>
            <option value="NE">North East</option>
        </select>
        <br />
        <label name="burialnumber">Burial Number</label>
        <input type="text" id="burialnumber" name="burialnumber" class="form-control"/>
        <br />
        <label name="haircolor">Hair Color</label>
        <select name="haircolor" class="form-control">
            <option value=""> -- Hair Color --</option>
            <option value="B">Brown</option>
            <option value="K">Black</option>
            <option value="A">Brown-Red</option>
            <option value="R"> Red / Red-Blonde</option>
            <option value="D"> Blonde</option>
            <option value="U"> Unknown</option>
        </select>
        <br />

        <button type="submit" class="btn btn-success mt-3">Add Record</button>
    </form>
</div>