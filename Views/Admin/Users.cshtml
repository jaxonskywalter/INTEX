@model INTEX.Models.UserListModel

@section Styles {
    <link rel="stylesheet" href="~/css/users.css" />
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Users</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">Add New User</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@Model.UserRoles[user.Id]</td>
                    <td>
                        <a href="@Url.Action("Edit", "Admin", new { id = user.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", "Admin", new { id = user.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
